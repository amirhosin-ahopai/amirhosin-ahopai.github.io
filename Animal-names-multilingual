      "de": {name: 'Deutsch'},
      "ru": {name: 'Русский'},
      "zh": {name: '中文'},
      "ja": {name: '日本語'},
      "ko": {name: '한국어'},
      "hi": {name: 'हिन्दी'},
      "tr": {name: 'Türkçe'},
      "sw": {name: 'Kiswahili'},
      "pt": {name: 'Português'},
      "it": {name: 'Italiano'},
      "id": {name: 'Bahasa Indonesia'},
      "nl": {name: 'Nederlands'},
      "pl": {name: 'Polski'},
      "he": {name: 'עברית'}
    };

    const ANIMALS = [
      {key: 'dog', translations: {en:'dog',fa:'سگ',ar:'كلب',es:'perro',fr:'chien',de:'Hund',ru:'собака',zh:'狗',ja:'犬',ko:'개',hi:'कुत्ता',tr:'köpek',sw:'mbwa',pt:'cão',it:'cane',id:'anjing',nl:'hond',pl:'pies',he:'כלב'}},
      {key: 'cat', translations: {en:'cat',fa:'گربه',ar:'قطة',es:'gato',fr:'chat',de:'Katze',ru:'кошка',zh:'猫',ja:'猫',ko:'고양이',hi:'बिल्ली',tr:'kedi',sw:'paka',pt:'gato',it:'gatto',id:'kucing',nl:'kat',pl:'kot',he:'חתול'}},
      {key: 'horse', translations: {en:'horse',fa:'اسب',ar:'حصان',es:'caballo',fr:'cheval',de:'Pferd',ru:'лошадь',zh:'马',ja:'馬',ko:'말',hi:'घोड़ा',tr:'at',sw:'farasi',pt:'cavalo',it:'cavallo',id:'kuda',nl:'paard',pl:'koń',he:'סוס'}},
      {key: 'cow', translations: {en:'cow',fa:'گاو',ar:'بقرة',es:'vaca',fr:'vache',de:'Kuh',ru:'корова',zh:'牛',ja:'牛',ko:'소',hi:'गाय',tr:'inek',sw:"ng'ombe",pt:'vaca',it:'mucca',id:'sapi',nl:'koe',pl:'krowa',he:'פרה'}},
      {key: 'sheep', translations: {en:'sheep',fa:'گوسفند',ar:'خروف',es:'oveja',fr:'mouton',de:'Schaf',ru:'овца',zh:'羊',ja:'羊',ko:'양',hi:'भेड़',tr:'koyun',sw:'kondoo',pt:'ovelha',it:'pecora',id:'domba',nl:'schaap',pl:'owca',he:'כבש'}},
      {key: 'goat', translations: {en:'goat',fa:'بز',ar:'ماعز',es:'cabra',fr:'chèvre',de:'Ziege',ru:'коза',zh:'山羊',ja:'山羊',ko:'염소',hi:'बकरी',tr:'keçi',sw:'mbuzi',pt:'cabra',it:'capra',id:'kambing',nl:'geit',pl:'koza',he:'עז'}},
      {key: 'pig', translations: {en:'pig',fa:'خوک',ar:'خنزير',es:'cerdo',fr:'cochon',de:'Schwein',ru:'свинья',zh:'猪',ja:'豚',ko:'돼지',hi:'सूअर',tr:'domuz',sw:'nguruwe',pt:'porco',it:'maiale',id:'babi',nl:'varken',pl:'świnia',he:'חזיר'}},
      {key: 'chicken', translations: {en:'chicken',fa:'مرغ',ar:'دجاج',es:'pollo',fr:'poulet',de:'Huhn',ru:'курица',zh:'鸡',ja:'鶏',ko:'닭',hi:'मुर्गी',tr:'tavuk',sw:'kuku',pt:'frango',it:'pollo',id:'ayam',nl:'kip',pl:'kurczak',he:'תרנגולת'}},
      {key: 'rooster', translations: {en:'rooster',fa:'خروس',ar:'ديك',es:'gallo',fr:'coq',de:'Hahn',ru:'петух',zh:'公鸡',ja:'雄鶏',ko:'수탉',hi:'मुर्गा',tr:'horoz',sw:'jogoo',pt:'galo',it:'gallo',id:'jago',nl:'haan',pl:'kogut',he:'תרנגול'}},
      {key: 'duck', translations: {en:'duck',fa:'اردک',ar:'بط',es:'pato',fr:'canard',de:'Ente',ru:'утка',zh:'鸭',ja:'鴨',ko:'오리',hi:'बतख',tr:'ördek',sw:'bata',pt:'pato',it:'anatra',id:'bebek',nl:'eend',pl:'kaczka',he:'ברווז'}},
      {key: 'bird', translations: {en:'bird',fa:'پرنده',ar:'طائر',es:'pájaro',fr:'oiseau',de:'Vogel',ru:'птица',zh:'鸟',ja:'鳥',ko:'새',hi:'पक्षी',tr:'kuş',sw:'ndege',pt:'pássaro',it:'uccello',id:'burung',nl:'vogel',pl:'ptak',he:'ציפור'}},
      {key: 'fish', translations: {en:'fish',fa:'ماهی',ar:'سمك',es:'pez',fr:'poisson',de:'Fisch',ru:'рыба',zh:'鱼',ja:'魚',ko:'물고기',hi:'मछली',tr:'balık',sw:'samaki',pt:'peixe',it:'pesce',id:'ikan',nl:'vis',pl:'ryba',he:'דג'}},
      {key: 'elephant', translations: {en:'elephant',fa:'فیل',ar:'فيل',es:'elefante',fr:'éléphant',de:'Elefant',ru:'слон',zh:'象',ja:'象',ko:'코끼리',hi:'हाथी',tr:'fil',sw:'tembo',pt:'elefante',it:'elefante',id:'gajah',nl:'olifant',pl:'słoń',he:'פיל'}},
      {key: 'lion', translations: {en:'lion',fa:'شیر',ar:'أسد',es:'león',fr:'lion',de:'Löwe',ru:'лев',zh:'狮子',ja:'ライオン',ko:'사자',hi:'शेर',tr:'aslan',sw:'simba',pt:'leão',it:'leone',id:'singa',nl:'leeuw',pl:'lew',he:'אריה'}},
      {key: 'tiger', translations: {en:'tiger',fa:'ببر',ar:'نمر',es:'tigre',fr:'tigre',de:'Tiger',ru:'тигр',zh:'虎',ja:'虎',ko:'호랑이',hi:'बाघ',tr:'kaplan',sw:'tigeri',pt:'tigre',it:'tigre',id:'harimau',nl:'tijger',pl:'tygrys',he:'נמר'}},
      {key: 'bear', translations: {en:'bear',fa:'خرس',ar:'دب',es:'oso',fr:'ours',de:'Bär',ru:'медведь',zh:'熊',ja:'熊',ko:'곰',hi:'भालू',tr:'ayı',sw:'dubu',pt:'urso',it:'orso',id:'beruang',nl:'beer',pl:'niedźwiedź',he:'דוב'}},
      {key: 'monkey', translations: {en:'monkey',fa:'میمون',ar:'قرد',es:'mono',fr:'singe',de:'Affe',ru:'обезьяна',zh:'猴子',ja:'猿',ko:'원숭이',hi:'वानर',tr:'maymun',sw:'nyani',pt:'macaco',it:'scimmia',id:'monyet',nl:'aap',pl:'małpa',he:'קוף'}},
      {key: 'snake', translations: {en:'snake',fa:'مار',ar:'ثعبان',es:'serpiente',fr:'serpent',de:'Schlange',ru:'змея',zh:'蛇',ja:'蛇',ko:'뱀',hi:'साँप',tr:'yılan',sw:'nyoka',pt:'cobra',it:'serpente',id:'ular',nl:'slang',pl:'wąż',he:'נחש'}},
      {key: 'frog', translations: {en:'frog',fa:'قورباغه',ar:'ضفدع',es:'rana',fr:'grenouille',de:'Frosch',ru:'лягушка',zh:'蛙',ja:'カエル',ko:'개구리',hi:'मेंढक',tr:'kurbağa',sw:'chura',pt:'rã',it:'rana',id:'katak',nl:'kikker',pl:'żaba',he:'צפרדע'}},
      {key: 'rabbit', translations: {en:'rabbit',fa:'خرگوش',ar:'أرنب',es:'conejo',fr:'lapin',de:'Kaninchen',ru:'кролик',zh:'兔子',ja:'ウサギ',ko:'토끼',hi:'खरगोश',tr:'tavşan',sw:'sungura',pt:'coelho',it:'coniglio',id:'kelinci',nl:'konijn',pl:'królik',he:'ארנב'}}
    ];

    // build language selector and table header
    const langFilter = document.getElementById('langFilter');
    const theadRow = document.getElementById('theadRow');
    const tbody = document.getElementById('tbody');
    const langList = document.getElementById('langList');

    function init() {
      // populate select
      for (const code of Object.keys(LANGS)) {
        const opt = document.createElement('option');
        opt.value = code;
        opt.textContent = `${LANGS[code].name} (${code})`;
        langFilter.appendChild(opt);
      }

      renderTable();
    }

    function renderTable(filterLang = 'all', query = ''){
      // header
      theadRow.innerHTML = '';
      const thKey = document.createElement('th'); thKey.textContent = 'Animal (key) / حیوان'; theadRow.appendChild(thKey);
      const languages = (filterLang === 'all') ? Object.keys(LANGS) : [filterLang];
      languages.forEach(code => {
        const th = document.createElement('th');
        th.textContent = `${LANGS[code].name} \n(${code})`;
        theadRow.appendChild(th);
      });

      // language tags for quick glance
      langList.innerHTML = '';
      languages.forEach(code => {
        const span = document.createElement('span'); span.className='lang-tag'; span.textContent = LANGS[code].name + ' ('+code+')'; langList.appendChild(span);
      });

      // body rows
      tbody.innerHTML = '';
      const q = query.trim().toLowerCase();
      ANIMALS.forEach(a=>{
        // match search: by key or any translation or language name
        const allValues = [a.key].concat(Object.values(a.translations));
        const languageNames = Object.values(LANGS).map(l=>l.name.toLowerCase());
        const matchesQuery = q === '' || allValues.join(' ').toLowerCase().includes(q) || languageNames.join(' ').includes(q);
        if (!matchesQuery) return;

        const tr = document.createElement('tr');
        const tdKey = document.createElement('td'); tdKey.textContent = a.key; tr.appendChild(tdKey);
        languages.forEach(code=>{
          const td = document.createElement('td');
          td.textContent = a.translations[code] ?? '—';
          tr.appendChild(td);
        });
        tbody.appendChild(tr);
      });
    }

    document.getElementById('search').addEventListener('input', e=>{
      renderTable(langFilter.value, e.target.value);
    });
    langFilter.addEventListener('change', e=>{
      renderTable(e.target.value, document.getElementById('search').value);
    });

    document.getElementById('download').addEventListener('click', ()=>{
      // build CSV from current view
      const filterLang = langFilter.value;
      const languages = (filterLang === 'all') ? Object.keys(LANGS) : [filterLang];
      const rows = [];
      const header = ['key','animal_human'].concat(languages.map(c=>c));
      rows.push(header.join(','));
      // iterate visible rows
      const q = document.getElementById('search').value.trim().toLowerCase();
      ANIMALS.forEach(a=>{
        const allValues = [a.key].concat(Object.values(a.translations));
        const matchesQuery = q === '' || allValues.join(' ').toLowerCase().includes(q);
        if (!matchesQuery) return;
        const row = [a.key,''].concat(languages.map(c=>`"${(a.translations[c]||'').replace(/"/g,'""')}"`));
        rows.push(row.join(','));
      });

      const csv = rows.join('\n');
      const blob = new Blob([csv], {type:'text/csv;charset=utf-8;'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'animal-names.csv'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    });

    document.getElementById('toggleDir').addEventListener('click', ()=>{
      document.documentElement.dir = document.documentElement.dir === 'rtl' ? 'ltr' : 'rtl';
    });

    init();
  </script>
</body>
</html>
